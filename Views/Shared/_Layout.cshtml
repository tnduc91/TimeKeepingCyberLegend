<!DOCTYPE html>
<html>
<head>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý chấm công</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <table style="width:100%">
                <tr>
                    <td>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Tài khoản", "Index", "Employee")</li>
                                <li>@Html.ActionLink("Chấm Công", "Index", "Checkin")</li>
                            </ul>
                           
                        </div>
                    </td>
                    <td>
                        @if (Session["UserName"] != null && Session["UserName"] != "")
                        {
                        <span style="float:right; vertical-align:middle;color:white">
                            Xin chào &nbsp;@Session["UserName"] &nbsp;&nbsp;&nbsp;&nbsp;
                            @Html.ActionLink("Đăng xuất", "LogOff", "Account")
                        </span>
                            
                        }
                        else
                        {
                            <span style="float:right; vertical-align:middle;color:white">Vui lòng đăng nhập...</span>
                        }

                    </td>
                </tr>
            </table>
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Cyber Legend</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


